using System;
using System.Collections;
using System.Collections.Generic;
using System.IO;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp_HackerRank
{
    // Warm-up Challenges
    // Repeated String
    class Program
    {
        static long repeatedString(string s, long n)
        {
            // Sample Input 0
            // aba
            // 10
            // Sample Output 0
            // 7

            // Sample Input 1
            // a
            // 1000000000000
            // Sample Output 1
            // 1000000000000 

            long resultCount = 0;
            long mod = n % s.Length;
            long bolum = n / s.Length;
            long aCountByString = s.Count(c => c.ToString() == "a");

            if (aCountByString == 0) return 0;

            if (n == bolum)
                return n;
            else
            {
                resultCount = bolum * aCountByString;
                resultCount += s.Substring(0, Convert.ToInt32(mod)).Count(c => c.ToString() == "a");
            }
            return resultCount;
        }

        static void Main(string[] args)
        {
            string s = Console.ReadLine();
            long n = Convert.ToInt64(Console.ReadLine());
            long result = repeatedString(s, n);
            Console.WriteLine(result);
            Console.ReadLine();
        }
    }
}


